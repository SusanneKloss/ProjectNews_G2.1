<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.Menu">
    <children>
        <ImageView fitHeight="720.0" fitWidth="1280.0">
            <image>
                <Image url="@ProjectNews.jpg" />
            </image>
        </ImageView>
      <TableView fx:id="table" layoutY="143.0" onMouseClicked="#tableFocusArticle" prefHeight="581.0" prefWidth="1280.0">
        <columns>
          <TableColumn fx:id="authorColumn" editable="false" minWidth="319.0" prefWidth="75.0" />
          <TableColumn fx:id="titleColumn" editable="false" minWidth="961.0" prefWidth="75.0" />
        </columns>
      </TableView>
        <Group fx:id="menuPaneGroup" layoutY="122.0">
            <children>
                <ImageView fitHeight="40.0" fitWidth="318.0">
                    <image>
                        <Image url="@Option1.jpg" />
                    </image>
                </ImageView>
                <ImageView fitHeight="40.0" fitWidth="318.0" layoutX="320.0">
                    <image>
                        <Image url="@Option2.jpg" />
                    </image>
                </ImageView>
                <ImageView fitHeight="40.0" fitWidth="318.0" layoutX="641.0">
                    <image>
                        <Image url="@Option3.jpg" />
                    </image>
                </ImageView>
                <ImageView fitHeight="40.0" fitWidth="318.0" layoutX="961.0">
                    <image>
                        <Image url="@Option4.jpg" />
                    </image>
                </ImageView>
            </children>
        </Group>
      <ImageView fitHeight="170.0" fitWidth="1280.0">
         <image>
            <Image url="@Header.jpg" />
         </image>
      </ImageView>
        <Text fill="#818080" layoutX="920.0" layoutY="73.0" strokeType="OUTSIDE" strokeWidth="0.0" text="PROJECT NEWS">
            <font>
                <Font name="Arial Black" size="36.0" />
            </font>
        </Text>
        <Group fx:id="menuNameGroup" layoutX="20.0" layoutY="155.0">
            <children>
                <Text fx:id="austriaLetters" fill="#858585" strokeType="OUTSIDE" strokeWidth="0.0" text="Get top headlines austria" textAlignment="CENTER">
                    <font>
                        <Font name="Al Nile" size="22.0" />
                    </font>
                </Text>
                <Text fx:id="bitcoinLetters" fill="#858585" layoutX="320.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Get all news about bitcoin" textAlignment="CENTER">
                    <font>
                        <Font name="Al Nile" size="22.0" />
                    </font>
                </Text>
                <Text fx:id="countLetters" fill="#858585" layoutX="640.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Count articles" textAlignment="CENTER">
                    <font>
                        <Font name="Al Nile" size="22.0" />
                    </font>
                </Text>
                <Text fx:id="quitLetters" fill="#858585" layoutX="960.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Quit program" textAlignment="CENTER">
                    <font>
                        <Font name="Al Nile" size="22.0" />
                    </font>
                </Text>
            </children>
        </Group>
        <Group fx:id="menuButtonGroup" layoutY="122.0">
            <children>
                <Button fx:id="austriaButton" minHeight="40.0" minWidth="318.0" mnemonicParsing="false" onAction="#getTopHeadlinesAustria" onMouseEntered="#austriaEntered" onMouseExited="#austriaExited" opacity="0.0" text="austriaButton" />
                <Button fx:id="bitcoinButton" layoutX="320.0" minHeight="40.0" minWidth="318.0" mnemonicParsing="false" onAction="#getAllNewsBitcoin" onMouseEntered="#bitcoinEntered" onMouseExited="#bitcoinExited" opacity="0.0" text="bitcoinButton" />
                <Button fx:id="countButton" layoutX="640.0" minHeight="40.0" minWidth="318.0" mnemonicParsing="false" onAction="#getArticleCount" onMouseEntered="#countEntered" onMouseExited="#countExited" opacity="0.0" text="countButton" />
                <Button fx:id="quitButton" layoutX="960.0" minHeight="40.0" minWidth="318.0" mnemonicParsing="false" onAction="#printExitMessages" onMouseEntered="#quitEntered" onMouseExited="#quitExited" opacity="0.0" text="quitButton" />
            </children>
        </Group>
      <ScrollPane fx:id="focusPane" disable="true" hbarPolicy="NEVER" layoutX="90.0" layoutY="185.0" opacity="0.0" prefHeight="520.0" prefWidth="1100.0">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="520.0" prefWidth="1100.0">
               <children>
                  <TextArea fx:id="focusText" disable="true" editable="false" opacity="0.0" prefHeight="520.0" prefWidth="1100.0" />
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
      <Button fx:id="focusCloseButton" disable="true" layoutX="1118.0" layoutY="670.0" maxHeight="20.0" mnemonicParsing="false" onAction="#focusClose" opacity="0.0" prefHeight="10.0" prefWidth="55.0" text="Close" textFill="#707070">
         <font>
            <Font name="Al Nile" size="13.0" />
         </font>
      </Button>
      <Group>
         <children>
            <ImageView fx:id="infoPane" fitHeight="80.0" fitWidth="400.0" layoutX="440.0" layoutY="225.0" opacity="0.0">
               <image>
                  <Image url="@Option3.jpg" />
               </image>
            </ImageView>
            <Text fx:id="infoCount" layoutX="540.0" layoutY="270.0" opacity="0.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Number of articles: 11 ">
               <font>
                  <Font name="Al Nile" size="20.0" />
               </font>
            </Text>
         </children>
      </Group>
      <AnchorPane fx:id="undoClicks" disable="true" onMouseClicked="#undoClick" opacity="0.0" prefHeight="720.0" prefWidth="1280.0" />
    </children>

</AnchorPane>
